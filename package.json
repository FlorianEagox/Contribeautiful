{
	"name": "contribeautiful",
	"version": "0.1.0",
	"private": true,
	"scripts": {
		"serve": "vue-cli-service serve --host sethpainter.com --port 3000",
		"build": "vue-cli-service build",
		"lint": "vue-cli-service lint",
		"server": "nodemon server/server.js"
	},
	"dependencies": {
		"core-js": "^3.6.5",
		"cors": "^2.8.5",
		"dotenv": "^8.2.0",
		"express": "^4.17.1",
		"github-calendar": "^2.2.3",
		"monk": "^7.3.2",
		"node-fetch": "^2.6.1",
		"vue": "^3.0.0",
		"vue-router": "^4.0.0-0"
	},
	"devDependencies": {
		"@vue/cli-plugin-babel": "~4.5.0",
		"@vue/cli-plugin-eslint": "^4.5.7",
		"@vue/cli-plugin-router": "^4.5.7",
		"@vue/cli-service": "~4.5.0",
		"@vue/compiler-sfc": "^3.0.0",
		"babel-eslint": "^10.1.0",
		"eslint": "^6.7.2",
		"eslint-plugin-vue": "^7.0.0-0",
		"lint-staged": "^9.5.0",
		"morgan": "^1.10.0",
		"nodemon": "^2.0.4"
	},
	"eslintConfig": {
		"root": true,
		"env": {
			"node": true
		},
		"extends": [
			"plugin:vue/vue3-essential",
			"eslint:recommended"
		],
		"parserOptions": {
			"parser": "babel-eslint"
		},
		"rules": {
			"vue/html-indent": [
				1,
				"tab"
			],
			"indent": [
				1,
				"tab"
			],
			"allowIndentationTabs": 0,
			"no-tabs": 0,
			"semi": [
				1,
				"always"
			],
			"quotes": [
				1,
				"single"
			],
			"space-before-function-paren": [
				1,
				"never"
			],
			"curly": 0,
			"eqeqeq": 0,
			"arrow-parens": 0,
			"no-unused-vars": "warn"
		}
	},
	"browserslist": [
		"> 1%",
		"last 2 versions",
		"not dead"
	],
	"gitHooks": {
		"pre-commit": "lint-staged"
	},
	"lint-staged": {
		"*.{js,jsx,vue}": [
			"vue-cli-service lint",
			"git add"
		]
	}
}
